        android:layout_width="365dp"
        android:layout_height="150dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/cont_iconos"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- icono 1 -->
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="135dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_arriba_uno"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/arriba_uno" />

            <TextView
                android:id="@+id/txtArribaUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestro centro"
                android:textColor="#172646"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- icono 2 -->
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="135dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_arriba_dos"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/arriba_dos" />

            <TextView
                android:id="@+id/txtArribaDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios"
                android:textColor="#172646"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- icono 3 -->
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="135dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_arriba_tres"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/arriba_tres" />

            <TextView
                android:id="@+id/txtArribaTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novedades"
                android:textColor="#172646"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- fin contenedor 1 -->
    </LinearLayout>

    <!-- contenedor 3 -->

