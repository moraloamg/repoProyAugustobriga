<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contCurso"
        android:layout_width="365dp"
        android:layout_height="130dp"
        android:background="@drawable/cont_iconos"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtExamen"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:text="tema 2 lengua"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtNotaExamen"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:text="5.8"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtIdExamen"
                android:layout_width="0dp"
                android:layout_height="0dp" />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp">


            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtRefAsignatura"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Lengua castellana "
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="161dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtRefTrimestre"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="1ยบ Trimestre"
                    android:textSize="15sp" />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>