<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pMedio.Profesorado.AcProfesorado">

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/cabecera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/fondo_pie_de_pagina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--contenedor 1 -->
    <LinearLayout
        android:id="@+id/contOrganizacion"
        android:layout_width="365dp"
        android:layout_height="130dp"
        android:background="@drawable/cont_iconos"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278">

        <TextView
            android:id="@+id/txtOrganizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organización"
            android:textSize="25sp"
            android:gravity="center"
            android:orientation="vertical"/>

    </LinearLayout>

    <!--contenedor 3 -->
    <LinearLayout
        android:id="@+id/contDepartamentos"
        android:layout_width="365dp"
        android:layout_height="130dp"
        android:background="@drawable/cont_iconos"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821">

        <TextView
            android:id="@+id/txtDepartamentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departamentos"
            android:textSize="25sp"
            android:gravity="center"
            android:orientation="vertical"/>

    </LinearLayout>

    <!--contenedor 2 -->
    <LinearLayout
        android:id="@+id/contTutorias"
        android:layout_width="365dp"
        android:layout_height="130dp"
        android:background="@drawable/cont_iconos"
        android:orientation="horizontal"
        android:gravity="center"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545">

        <TextView
            android:id="@+id/txtTutorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorías"
            android:textSize="25sp"
            android:gravity="center"
            android:orientation="vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCabeceraProfesorado"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:text="Profesorado"
        android:textAlignment="gravity"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

</androidx.constraintlayout.widget.ConstraintLayout>