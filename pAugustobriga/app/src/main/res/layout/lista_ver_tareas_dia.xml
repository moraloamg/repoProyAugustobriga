<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lyTarea"
        android:layout_width="375dp"
        android:layout_height="107dp"
        android:background="@drawable/fondo_tarea_ex"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtDescTarea"
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:text="Examen de matematicas"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="89dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkTareaCompletada"
                android:layout_width="73dp"
                android:layout_height="22dp"
                android:enabled="false"
                android:text="Completada"
                android:textColor="@color/white"
                android:textSize="7dp" />

            <CheckBox
                android:id="@+id/chkTareaPasada"
                android:layout_width="73dp"
                android:layout_height="22dp"
                android:enabled="false"
                android:text="Pasada"
                android:textColor="@color/white"
                android:textSize="7dp" />

            <TextView
                android:id="@+id/txtFechaNotificacion"
                android:layout_width="73dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="22/03/2022"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>